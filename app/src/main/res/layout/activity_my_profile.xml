<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.si.sipanicalarm.ui.myProfile.MyProfileViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@drawable/wallpaper"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.si.sipanicalarm.utils.customViews.CenteredToolbar
                android:id="@+id/toolbar_profiler"
                android:layout_width="match_parent"
                app:title="My Proflie"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">


            </com.si.sipanicalarm.utils.customViews.CenteredToolbar>

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_profiler"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView2"
                        android:onClick="@{()->viewModel.onImageClicked()}"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        app:url="@{viewModel.imageurl}"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toTopOf="parent" />



                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/space_10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/circleImageView2"
                        app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
                        app:srcCompat="@drawable/ic_camera" />


                    <ProgressBar
                        android:id="@+id/progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        android:max="100"
                        android:visibility="@{viewModel.visible ? View.VISIBLE : View.GONE}"
                        android:secondaryProgress="100"
                        android:progress="@{viewModel.progress}"
                        android:progressDrawable="@drawable/circular_progress"
                        app:layout_constraintBottom_toBottomOf="@+id/circleImageView2"
                        app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
                        app:layout_constraintStart_toStartOf="@+id/circleImageView2"
                        app:layout_constraintTop_toTopOf="@+id/circleImageView2" />



                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/leftGuideLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="16dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/rightGuideLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="16dp" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvUserName"
                        style="@style/cardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toBottomOf="@+id/circleImageView2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/light_blue"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userName"
                                style="@style/textInputEdiTextStyle"
                                android:layout_width="match_parent"
                                android:hint="@string/username"
                                android:inputType="textCapWords"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvEmailAddress"
                        style="@style/cardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toBottomOf="@+id/cvUserName">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/email"
                                style="@style/textInputEdiTextStyle"
                                android:layout_width="match_parent"
                                android:hint="@string/email"
                                android:inputType="textEmailAddress"
                               />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvState"
                        style="@style/cardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toBottomOf="@+id/cvEmailAddress">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:onClick="@{()->viewModel.onStateClicked()}"

                            app:hintEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etState"
                                style="@style/textInputEdiTextStyle"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:onClick="@{()->viewModel.onStateClicked()}"
                                android:text="Province No.3"
                                android:hint="@string/state"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvDistrict"
                        style="@style/cardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toBottomOf="@+id/cvState">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputStyle"
                            android:onClick="@{()->viewModel.onDistrictClicked()}"
                            android:layout_width="match_parent"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/textInputEdiTextStyle"
                                android:id="@+id/etDistrict"
                                android:onClick="@{()->viewModel.onDistrictClicked()}"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:text="@string/kathmandu"
                                android:hint="@string/district"
                                 />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvWardNumber"
                        style="@style/cardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toBottomOf="@+id/cvDistrict">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputStyle"
                            android:onClick="@{()->viewModel.onWardClicked()}"
                            android:layout_width="match_parent"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etWardNumber"
                                style="@style/textInputEdiTextStyle"
                                android:cursorVisible="false"
                                android:onClick="@{()->viewModel.onWardClicked()}"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:hint="@string/wardNo"
                                android:inputType="number"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvTole"
                        style="@style/cardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toBottomOf="@+id/cvWardNumber">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etStreet"
                                style="@style/textInputEdiTextStyle"
                                android:layout_width="match_parent"
                                android:hint="@string/tole"
                                android:inputType="textCapSentences"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvDevice"
                        style="@style/cardViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="@dimen/space_60dp"
                        app:layout_constraintEnd_toStartOf="@+id/rightGuideLine"
                        app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                        app:layout_constraintTop_toBottomOf="@+id/cvTole">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textInputStyle"
                            android:layout_width="match_parent"
                            android:onClick="@{()->viewModel.onDeviceClicked()}"
                            app:hintEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDevice"
                                style="@style/textInputEdiTextStyle"
                                android:layout_width="match_parent"
                                android:onClick="@{()->viewModel.onDeviceClicked()}"
                                android:hint="@string/deviceNumber"
                                android:focusable="false"

                                android:inputType="textCapSentences"/>
                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/btnUpdate"
                        style="@style/circularButton"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="32dp"
                        android:onClick="@{()->viewModel.onUpdateClicked()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/cvDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textColor="#ffffff"
                        android:textAllCaps="false" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>


