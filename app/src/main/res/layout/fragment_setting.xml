<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.sialarm.ui.homepage.settings.SettingViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rlMyProfile"
                    android:onClick="@{viewModel.onProfileClick()}"
                    android:layout_width="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/dark_grey"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/imageView3"
                        android:padding="16dp"
                        android:text="@string/my_profile" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        android:tint="@color/dark_grey"
                        app:srcCompat="@drawable/ic_arrow_right" />

                    <include
                        layout="@layout/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/imageView3"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlNotify"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:onClick="@{viewModel.onSafeAlertClick()}"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlMyProfile">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:textColor="@color/dark_grey"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/imageView6"
                        android:padding="16dp"
                        android:text="@string/notify_you_are_safe"
                        />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/dark_grey"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/ic_arrow_right" />

                    <include
                        layout="@layout/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/imageView6"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlHistory"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlNotify">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:textColor="@color/dark_grey"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/imageView7"
                        android:padding="16dp"
                        android:text="@string/history" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/dark_grey"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/ic_arrow_right" />

                    <include
                        layout="@layout/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/imageView7"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlLanguageSetting"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rlHistory">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:textColor="@color/dark_grey"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/switches"
                        android:padding="16dp"
                        android:text="@string/language" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_alignParentRight="true"

                        />


                    <include
                        layout="@layout/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/switches"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlTemsCondition"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rlLanguageSetting">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:textSize="18sp"
                        android:textColor="@color/dark_grey"
                        android:layout_toStartOf="@id/imageView10"
                        android:padding="16dp"
                        android:text="@string/terms_and_conditions" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="16dp"
                        android:tint="@color/dark_grey"
                        app:srcCompat="@drawable/ic_arrow_right" />

                    <include
                        layout="@layout/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/imageView10"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPrivacyPolicy"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rlTemsCondition">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:textSize="18sp"
                        android:textColor="@color/dark_grey"
                        android:layout_toStartOf="@id/imageView10"
                        android:padding="16dp"
                        android:text="@string/privacyPolicy" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="16dp"
                        android:tint="@color/dark_grey"
                        app:srcCompat="@drawable/ic_arrow_right" />

                    <include
                        layout="@layout/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/imageView11"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlLogout"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:onClick="@{viewModel.onLogoutClick()}"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rlPrivacyPolicy">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:textSize="18sp"
                        android:textColor="@color/dark_grey"
                        android:layout_toStartOf="@id/imageView10"
                        android:padding="16dp"
                        android:text="@string/logout" />

                    <ImageView
                        android:id="@+id/imageview12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="16dp"
                        android:tint="@color/dark_grey"
                        app:srcCompat="@drawable/ic_arrow_right" />

                    <include
                        layout="@layout/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/imageview12"
                        android:layout_marginTop="16dp" />
                </RelativeLayout>



                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineLeft_16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRight_16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.core.widget.NestedScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>


