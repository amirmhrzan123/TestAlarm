<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.sialarm.data.firebase.Friends" />

        <variable
            name="viewModel"
            type="com.example.sialarm.ui.homepage.contacts.ContactsItemViewModel" />

        <variable
            name="listenerType"
            type="com.example.sialarm.ui.homepage.contacts.ContactsItemViewModel.ListenerType" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <com.example.sialarm.utils.customViews.EasySwipeMenuLayout
                android:id="@+id/easySwipe"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:contentView="@+id/content"
                app:rightMenuView="@id/right"
                app:canLeftSwipe="@{viewModel.hasLeftMenu}"
                app:canRightSwipe="@{viewModel.hasRightMenu}"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/view"
                        android:layout_width="5dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:src="#FC5959"
                        android:padding="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:initialLetter="@{model}"
                        android:textColor="#ffffff"
                        android:textSize="28sp"
                        app:layout_constraintBottom_toBottomOf="@+id/civ_image"
                        app:layout_constraintEnd_toEndOf="@+id/civ_image"
                        app:layout_constraintStart_toStartOf="@+id/civ_image"
                        app:layout_constraintTop_toTopOf="@id/civ_image" />


                    <TextView
                        android:id="@+id/tvBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@{model.friendsText}"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/textView7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/dark_grey"
                            android:textSize="22sp"
                            tools:text="laksdjflaksdjflakjdfl"
                            android:layout_marginBottom="8dp"
                            android:text="@{model.name}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/civ_image"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/tvBackground"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/btnAccept"
                        android:layout_width="@dimen/quoteItemMenuWidth"
                        android:layout_height="match_parent"
                        android:background="@color/green"
                        android:clickable="true"
                        app:isVisible="@{viewModel.acceptEnable}"
                        android:onClick="@{()->viewModel.onAcceptClicked()}"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accept"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnReject"
                        android:layout_width="@dimen/quoteItemMenuWidth"
                        android:layout_height="match_parent"
                        android:background="@color/bg_decline"
                        android:clickable="true"
                        app:isVisible="@{viewModel.declineEnable}"
                        android:onClick="@{()->viewModel.onDeclineClicked()}"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Reject"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnDelete"
                        android:layout_width="@dimen/quoteItemMenuWidth"
                        android:layout_height="match_parent"
                        android:background="@color/bg_delete"
                        android:clickable="true"
                        app:isVisible="@{viewModel.deleteEnable}"
                        android:onClick="@{()->viewModel.onDeleteClick()}"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnUnfriend"
                        android:layout_width="@dimen/quoteItemMenuWidth"
                        android:layout_height="match_parent"
                        android:background="@color/bg_unfriend"
                        android:clickable="true"
                        app:isVisible="@{viewModel.unfriendEnable}"
                        android:onClick="@{()->viewModel.onUnfriendClick()}"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unfriend"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>




                </LinearLayout>





            </com.example.sialarm.utils.customViews.EasySwipeMenuLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>
